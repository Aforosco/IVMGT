<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Invco.styles.css" asp-append-version="true" />
</head>

<body class="Admin bg-light">
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar p-3 shadow d-flex flex-column h-100">
                <div class="d-flex align-items-center justify-content-between">
                    <a href="#" class="d-flex align-items-center text-decoration-none text-dark">
                        <img src="~/images/Logo.jpg" alt="Logo" class="logo-small me-2" width="40">
                        <span class="fw-bold d-none d-md-inline">TaskFlow</span>
                    </a>
                    <button class="btn btn-outline-primary btn-sm d-md-none">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>

                <hr>

                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Search..." aria-label="Search">
                </div>

                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("GetAllAssets", "Home")">
                            <i class="fas fa-home me-2"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("GetAllAssets", "Home")">
                            <i class="fas fa-boxes me-2"></i> Assets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("GetCategories", "Home")">
                            <i class="fas fa-th-list me-2"></i> Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("GetDepartments", "Home")">
                            <i class="fas fa-building me-2"></i> Departments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@Url.Action("GetUsers", "Account")">
                            <i class="fas fa-users me-2"></i> Users
                        </a>
                    </li>
                </ul>

                <hr class="mt-auto"> <!-- Pushes the following section to the bottom -->
                <!-- Profile and Logout Section -->
                <div class="mt-auto">
                    <div class="d-flex align-items-center">
                        <img class="rounded-circle me-2" src="~/images/avatar.png" alt="Profile Picture" width="40">
                        <div class="d-none d-md-block">
                            <div class="fw-bold">Admin</div>
                            <small class="text-muted">admin@gmail.com</small>
                        </div>
                    </div>

                    <div class="mt-3">
                        <form asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-right-from-bracket me-2"></i> Logout
                            </button>
                        </form>
                    </div>
                </div>
            </nav>


            <!-- Main Content -->
            <main class="col-md-9 col-lg-10 px-md-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap & jQuery Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
